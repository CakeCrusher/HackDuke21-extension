{
  "name": "Voon",
  "description": "Video amplification super-app primarily built for YouTube.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "512": "logo512.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "optional_permissions": [
    "downloads",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["./static/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"],
      "all_frames": false,
      "run_at": "document_end",
      "persistent": false
    }
  ]
}
